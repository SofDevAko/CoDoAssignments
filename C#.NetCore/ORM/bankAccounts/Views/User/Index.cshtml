<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Akin's Bank Accounts</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

</head>
<body>
    @model bankAccounts.Models.LoginUser

    <h1>Welcome to AkinBank Accounts</h1>
    <a href="register">Not registered? Click here!</a>
    
    <h2>Login Here:</h2>
    <form asp-controller="User" asp-action="Login" method="post">
        
            <label asp-for="Email">Email</label>
            <input asp-for="Email"/><br>
            
            <label asp-for="Password">Password</label>
            <input asp-for="Password"/><br>
            
            <button type="submit">Login</button><br>
        </form>
        <div asp-validation-summary="All"></div>
</body>
</html>