<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Akin's Bank Accounts</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

</head>
<body>
    @model bankAccounts.Models.RegUser

    <h3>Register Here</h3>
    <form asp-controller="User" asp-action="Create" method="post">
        
        <label asp-for="UserName">User Name</label>
        <input asp-for="UserName"/><br>
        
        <label asp-for="Email">Email</label>
        <input asp-for="Email"/><br>
        
        <label asp-for="Password">Password</label>
        <input asp-for="Password"/><br>
        
        <label asp-for="ConfirmPassword">Confirm Password</label>
        <input asp-for="ConfirmPassword"/><br>
        <button type="submit">Create new User</button><br>
    </form>
    <div asp-validation-summary="All"></div>

    <a href="/">Click here to Login!</a>

</body>
</html>