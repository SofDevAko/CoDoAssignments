<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Akin's the Wall</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

</head>
<body>
    @model theWall.Models.LoginUser

    <h1>The Wall Login and Registration</h1>
    <h2>@ViewBag.usererror</h2>
    <h3>Login Here</h3>
    <form asp-controller="User" asp-action="Login" method="post">
        <label asp-for="email">Email</label>
        <input asp-for="email"/><br>
        <label asp-for="password">Password</label>
        <input asp-for="password"/><br>
        <button type="submit">Login</button><br>
    </form>
    <div asp-validation-summary="All"></div>

    <a asp-action="Register">Click here to Register!</a><br>
    <a asp-action="Wall">Logged in? Go to the Wall!</a>
    <h2>@ViewBag.result</h2>
    <hr>
    
</body>
</html>